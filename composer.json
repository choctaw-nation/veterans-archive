{
	"name": "choctaw-nation/template-theme",
	"description": "a template theme to fork",
	"type": "library",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs wp-content/themes/veterans-archive/*.php wp-content/themes/veterans-archive/**/*.php wp-content/themes/veterans-archive/**/**/*.php wp-content/themes/veterans-archive/**/**/**/*.php",
		"phpcbf": "phpcbf wp-content/themes/veterans-archive/*.php wp-content/themes/veterans-archive/**/*.php wp-content/themes/veterans-archive/**/**/*.php wp-content/themes/veterans-archive/**/**/**/*.php "
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	}
}
